<div class="top-item">
  <h1>在室管理</h1>
  <%= Time.now.strftime("%H:%M") %>
  <h4>本日の利用人数はです</h4>
  <div class="show-member">
	  <% @member.each do |mem| %>
		  <%= link_to(mem.name, "/#{mem.id}") %>
      <%= mem.plan.strftime("%H:%M") %>
      <% if Time.now.strftime("%H:%M") >= mem.plan.strftime("%H:%M") %>
        <%= link_to("/#{mem.id}/destroy", {method: "post"}) do %>
          <button id="click">a</button>
        <% end %>
        <script>document.getElementById("click").click()</script>
      <% end %>
  	<% end %>
  </div>
  <%= form_tag('/create') do %>
  	<div>
  		<label>名前</label>
  	</div>
  		<input name="name" type="text" required="required">
  	<div>
    	<label for="scheduled-time">退出予定時間</label>
    </div>
  	<input type="time" name="times" required="required" >
  	<button type="submit">確定</button>
  <% end %>
</div>
